      "@app/*": ["src/app/*"],
      "@screens/*": ["src/screens/*"],
      "@shared/*": ["src/shared/*"],
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
